<!DOCTYPE html>
<html>
<head>
    <title>Battleship</title>
    <!-- <link rel="stylesheet" href="//cdn.jsdelivr.net/semantic-ui/2.2.4/semantic.min.css"> -->
    <link rel="stylesheet" type="text/css" href="style.css"  media="all"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="script.js"></script>
</head>
<body>
  <div class="register">
     <h1>Battleship</h1>
    <input type="text" id="username" placeholder="set your username and start the game">
    <button id="start">Start</button>
  </div>
  <div class="container">
    <a href="#" class="button">Home</a>
    <a href="/statistics" class="button">Statistics</a>
    <header>
      <h1>Battleship Test</h1>
    </header>

    <div class="game-container">
      <div id="left-sidebar">
          <h2>Game Logs</h4>
          <div class='log' id='log'></div>
  		</div>

      <div class="grid-container">
  			<h2>Human</h2>
  			<div class="grid human-player"><span class="hints">Please enable JavaScript to play this game</span></div>
  		</div>

  		<div class="grid-container">
  			<h2>Computer</h2>
  			<div class="grid computer-player"><span class="hints">Please enable JavaScript to play this game</span></div>
  		</div>
  	</div>
  </div>
  <div class="game-finish-info">
    <h1 class="winner">who wins</h1>
    <button id="restart">Continue Playing</button>
  </div>
</script>
</body>
</html>
